#modal-ordercall(style="display: none")
    .modal__wrapper
        a(href="").modal--close#modalCloseButton
            i.fas.fa-times
        h2 Заказать<br />обратный звонок
        form(method="GET", action="./ajax/response.json")#orderForm
            .form-group
                input(type="text", name="ordercall-name", placeholder="Ваше имя", required="required", data-rule-minlength="2", data-msg-minlehgth="Минимум 2 символа", data-msg="Пожалуйста, заполните это поле")
            .form-group
                input(type="tel", name="ordercall-phone", required="required", data-msg="Пожалуйста, заполните это поле", data-rule-digits="true", data-msg-digits="Допустим ввод только цифр",  placeholder="Номер телефона")
